<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3 class ="mt-3">New Genre</h3>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Genre', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">ジャンル一覧</h2>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Genre</th>
          </tr>
        </thead>
        <tbody>
          <%= @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, edit_admin_genre_url(genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>