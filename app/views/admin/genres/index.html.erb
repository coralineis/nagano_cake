<div class="container">
  <strong class ="bg-light px-3">ジャンル一覧・追加</strong>

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <form class="form-horizontal">
        <div class="form-group">
          <div class="form-inline mt-5">
            <label for="genre_name" class="mr-5">ジャンル名</label>
            <%= f.text_field :name, class: 'form-control mr-5' %>
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </div>
        </div>
      </form>
    <% end %>

    <table class="table table-hover table-inverse mt-5" style="width: 40%">
      <thead>
        <tr class="table-active">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_url(genre.id), class: 'btn btn-success' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>