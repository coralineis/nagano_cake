<div class="container">
  <div class="row my-3">
    <h5><span class="bg-light font-weight-bold px-3">注文履歴一覧</span></h5>
  </div>
  <table class="table table-hover table-inverse">
    <thead>
      <tr class="table-active">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= l order.created_at %></td>
          <td><%= order.name %></td>
          <td><%= order.amount %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
