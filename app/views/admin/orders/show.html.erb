<div class="container">
  <div class="row mt-3">
    <h5><span class="bg-light font-weight-bold px-3">注文履歴詳細</span></h5>
  </div>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <th>購入者</th>
        <th><%= @order.customer.full_name %></th>
      </tr>
      <tr>
        <th>注文日</th>
        <th><%= l @order.created_at, format: :short %></th>
      </tr>
      <tr>
        <th>配送先</th>
        <th>
          〒<%= @order.postal_code %> <%= @order.address %><br>
          <%= @order.name %>
        </th>
      </tr>
      <tr>
        <th>支払方法</th>
        <th><%= @order.payment_method_i18n %></th>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
          <th>
            <%= f.select :status, [['入金待ち', 0], ['入金確認', 1], ['製作中', 2], ['発送準備中', 3], ['発送済み', 4]] %>
            <%= f.submit "更新", class: "btn btn-success ml-3" %>
          </th>
        <% end %>
      </tr>
    </tbody>
  </table class="table table-hover table-inverse">
  <table class="table">
    <thead>
      <tr class="table-active">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= %></td>
          <%= form_with model: @order_detail, url: admin_order_path, method: :patch do |f| %>
            <td>
              <%= f.select :making_status, [['製作不可', 0], ['製作待ち', 1], ['製作中', 2], ['製作完了', 3]] %>
              <%= f.submit "更新", class: "btn btn-success ml-3" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>