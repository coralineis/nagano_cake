<div class="container">
  <span class="bg-light font-weight-bold px-3">管理者ログイン</span>
  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: 'mr-3' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'ml-5' %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-sm btn-primary px-3' %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
</div>
