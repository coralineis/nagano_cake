<div class="container">
  <div class="row">
    <h5 class="mt-2"><span class="bg-light font-weight-bold px-3">商品編集</span></h5>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">商品画像</strong>
          <%= f.attachment_field :image %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">商品名</strong>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">商品説明</strong>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">ジャンル</strong>
          <%= f.collection_select :genre_id, Genre.all, :id, :name %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">税抜価格</strong>
          <%= f.text_field :price, class: 'form-control' %>円
        </div>
      </div>
      <div class="form-group">
        <strong class="mr-5">販売ステータス</strong>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>