<div class="container">
  <div class="row mt-3">
    <div class="col">
      <h5 class="my-2"><span class="bg-light font-weight-bold px-3">商品一覧</span></h4>
    </div>
    <div class="col-auto">
      <%= link_to new_admin_item_path do %>
        <i class="bi bi-plus-circle text-dark", style="font-size: 30px"></i>
      <% end %>
    </div>

  </div>
  <div class="row justify-content-center">
    <table class="table table-hover table-inverse">
      <thead>
        <tr class="table-active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
            <td><%= item.price %></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>