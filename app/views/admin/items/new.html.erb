<div class="container">
　<strong class="bg-light px-3">商品新規登録</strong>
　<div class="row justify-content-center">
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">商品画像</strong>
          <%= f.attachment_field :image %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">商品名</strong>
          <%= f.text_field :name, class: 'form-control', placeholder: '商品名' %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">商品説明</strong>
          <%= f.text_area :introduction, class: 'form-control', placeholder: 'ここに説明文を記述します' %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong>ジャンル</strong>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <strong class="mr-5">税抜価格</strong>
          <%= f.text_field :price, class: 'form-control', placeholder: '1000' %>円
        </div>
      </div>
      <div class="form-group">
        <strong>販売ステータス</strong>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>