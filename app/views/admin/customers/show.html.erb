<div class="container">
  <div class="row mt-3">
    <h4>
      <span class="bg-light font-weight-bold px-3"><%= customer.name %>の会員詳細</span>
    </h4>
  </div>
  <div class="row">
    <h5 class="font-weight-bold">登録情報</h5>
    <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success" %>
    <table>
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    <h5 class="font-weight-bold">配送先</h5>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
    <h5 class="font-weight-bold">注文履歴</h5>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>