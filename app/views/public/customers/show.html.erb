<div class="container">
  <div class="row mt-3 ml-5">
    <h5><span class="bg-light font-weight-bold px-3">マイページ</span></h5>
  </div>
  <div class="row my-3">
    <h5 class="font-weight-bold mr-5">登録情報</h5>
    <%= link_to "編集する", edit_customers_path(current_customer), class: "btn btn-success" %>
  </div>

  <table class="table table-bordered border-dark">
    <tbody>
      <tr>
        <th class="table-active">氏名</th>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <th class="table-active">カナ</th>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <th class="table-active">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="table-active">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-active">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-active">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="row my-3">
    <h5 class="font-weight-bold mr-5">配送先</h5>
    <%= link_to "一覧を見る", order_details_path, class: "btn btn-primary" %>
  </div>
  <div class="row">
    <h5 class="font-weight-bold mr-4">注文履歴</h5>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>