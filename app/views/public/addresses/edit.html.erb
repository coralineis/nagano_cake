<div class="container">
  <div class="row mt-3">
    <h5>
      <span class="bg-light font-weight-bold px-3">配送先編集</span>
    </h5>
  </div>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th class="form-inline"><%= f.text_field :postal_code, class: "form-control" %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address, class: "form-control" %></th>
        </tr>
        <tr>
          <th>宛名</th>
          <th class="form-inline"><%= f.text_field :name, class: "form-control" %></th>
          <th><%= f.submit "変更内容を保存", class: "btn btn-success" %></th>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>