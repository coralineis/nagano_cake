<div class="container">
  <div class="row mt-3">
    <h5>
      <span class="bg-light font-weight-bold px-3">配送先登録/一覧</span>
    </h5>
  </div>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col" style="width: 20%"></th>
          <th scope="col" style="width: 60%"></th>
          <th scope="col" style="width: 20%"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th><%= f.text_field :postal_code, placeholder: "0000000" %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 60%" %></th>
        </tr>
        <tr>
          <th>宛名</th>
          <th><%= f.text_field :name, placeholder: "令和道子" %></th>
          <th><%= f.submit "新規登録", class: "btn btn-success" %></th>
        </tr>
      </tbody>
    </table>
  <% end %>

  <table class="table">
    <thead>
      <tr class="table-active">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <th><%= address.postal_code %></th>
          <th><%= address.address %></th>
          <th><%= address.name %></th>
          <th>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>