<div class="container">
  <div class="row mt-3">
    <h5>
      <span class="bg-light font-weight-bold px-3">ショッピングカート</span>
    </h5>
    <%= link_to "カートを空にする", destroy_all_path, method: :delete, class: "btn btn-danger" %>
  </div>
  <table class="table">
    <thead>
      <tr class="table-active">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <th><%= cart_item.item.name %></th>
          <th><%= cart_item.item.add_tax_price.to_s(:delimited) %></th>
          <th><%= cart_item.amount %><%= link_to "変更" %></th>
          <th><%= cart_item.subtotal %></th>
          <th><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></th>
          <% @total_payment += cart_item.subtotal %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    <table>
      <tbody>
        <tr>
          <th>合計金額</th>
          <th><%= @total_payment.to_s(:delimited) %></th>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success text-center" %>
</div>